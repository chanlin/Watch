<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LineChartView">
        <attr name="horizontal_grid_step" format="integer" min="0" />
        <attr name="vertical_grid_step" format="integer" min="0" />
        <attr name="horizontal_grid_sublines_count" format="integer" min="0" />
        <attr name="vertical_grid_sublines_count" format="integer" min="0" />
        <attr name="vertical_grid" format="boolean" />
        <attr name="vertical_grid_sublines" format="boolean" />
        <attr name="horizontal_grid" format="boolean" />
        <attr name="horizontal_grid_sublines" format="boolean" />
        <attr name="horizontal_grid_color" format="color" />
        <attr name="vertical_grid_color" format="color" />
        <attr name="horizontal_grid_sublines_color" format="color" />
        <attr name="vertical_grid_sublines_color" format="color" />
        <attr name="horizontal_grid_thikness" format="dimension" />
        <attr name="vertical_grid_thikness" format="dimension" />
        <attr name="horizontal_grid_sublines_thikness" format="dimension" />
        <attr name="vertical_grid_sublines_thikness" format="dimension" />
        <attr name="horizontal_values" format="boolean" />
        <attr name="vertical_values" format="boolean" />
        <attr name="horizontal_values_color" format="color" />
        <attr name="vertical_values_color" format="color" />
        <attr name="horizontal_values_size" format="dimension" />
        <attr name="vertical_values_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="round_background" format="boolean" />
        <attr name="is_oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>
    <attr name="bg_color" format="reference" />
    <attr name="bg_title_left_btn" format="reference" />
    <attr name="bg_mountion" format="reference" />




    <declare-styleable name="PtrFrameLayout">
        <!-- Optional. If you put header and content in xml, you can you these to specify them. -->
        <attr name="ptr_header" format="reference" />
        <attr name="ptr_content" format="reference" />

        <!-- the resistance when you are moving the frame -->
        <attr name="ptr_resistance" format="float" />

        <!-- the ration of the height of the header to trigger refresh -->
        <attr name="ptr_ratio_of_header_height_to_refresh" format="float" />

        <attr name="ptr_duration_to_close" format="integer" />
        <attr name="ptr_duration_to_close_header" format="integer" />

        <!-- pull to refresh, otherwise release to refresh, default is release to refresh -->
        <attr name="ptr_pull_to_fresh" format="boolean" />

        <!-- keep header when refreshing-->
        <attr name="ptr_keep_header_when_refresh" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PtrClassicHeader">
        <attr name="ptr_rotate_ani_time" format="integer" />
    </declare-styleable>
</resources>