<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/dear_rl_education"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:background="@drawable/education_bg_selector">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:id="@+id/dear_iv_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_education" />

                <TextView
                    android:id="@+id/dear_tv_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dear_iv_education"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/dear_text_education"
                    android:textColor="@color/white"
                    android:textSize="15dp" />


            </RelativeLayout>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dear_rl_expect"
            android:layout_width="120dp"
            android:layout_height="90dp"

            android:layout_marginLeft="20dp"
            android:background="@drawable/expect_bg_selector">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/dear_iv_expect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_expect" />

            <TextView
                android:id="@+id/dear_tv_expect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dear_iv_expect"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/dear_text_expect"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
