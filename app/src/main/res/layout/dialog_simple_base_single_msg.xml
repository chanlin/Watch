<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_button_white_normal"
        android:minWidth="250.0dip"
        android:orientation="vertical">

        <TextView
            android:id="@id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.0dip"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/birthday_picker_selector_title_color"
            android:textSize="15.0sp" />

        <View
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="0.6600001dip"
            android:background="@color/birthday_picker_selector_title_color"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17.0dip"
            android:layout_marginLeft="14.0dip"
            android:layout_marginRight="14.0dip"
            android:layout_marginTop="17.0dip"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_body_up"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/dialog_body_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.5999756dip"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_left_selector"
                android:gravity="center"
                android:text=""
                android:textColor="@color/app_color"
                android:textSize="@dimen/dialog_button_text_size" />

            <Button
                android:id="@id/btn_ok"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_right_selector"
                android:gravity="center"
                android:text=""
                android:textColor="@color/app_color"
                android:textSize="@dimen/dialog_button_text_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
