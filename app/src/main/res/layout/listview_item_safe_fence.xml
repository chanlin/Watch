<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@drawable/item_selector">

        <ImageView
            android:id="@+id/safe_fence_iv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/safe_fence_other" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/safe_fence_iv_address"
            android:layout_marginLeft="@dimen/ten_margin">
            <TextView
                android:id="@+id/safe_fence_tv_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text_color"
                android:textSize="15sp"
                android:text="@string/home"/>

            <TextView
                android:id="@+id/safe_fence_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市朝阳区北苑路靠近北辰泰岳(附近)"
                android:textColor="@color/gray_text_color"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="6dp"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/safe_fence_tv_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text_color"
            android:textSize="12sp"
            android:text="500m"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            />



    </RelativeLayout>


</LinearLayout>
