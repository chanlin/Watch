<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/bg_layout"
        android:layout_width="270.0dip"
        android:layout_height="80.0dip"
        android:layout_gravity="center"
        android:background="@drawable/shape_button_white_normal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:indeterminateDrawable="@drawable/progressbar_grey"/>


            <ImageView
                android:id="@+id/loading_dialog_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <TextView
                android:id="@+id/loading_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|center"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:text="@string/loading_text"
                android:textColor="@color/black_text_color"
                android:textSize="18.0sp" />
        </LinearLayout>

        <!--<ImageView-->
            <!--android:id="@+id/delete_img"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="-3.0dip"-->
            <!--android:layout_marginTop="-2.0dip"-->
            <!--android:contentDescription="@null"-->
            <!--android:src="@mipmap/dialog_delete" />-->
    </RelativeLayout>
</LinearLayout>
