<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/watch_tools_baby_info"
                layout="@layout/layout_bady_info" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <include
                    android:id="@+id/watch_tools_barrery_grade"
                    layout="@layout/layout_watch_tools_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/button_left_margin"
                    android:background="@color/line_color" />

                <include
                    android:id="@+id/watch_tools_alarm"
                    layout="@layout/layout_watch_tools_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/button_left_margin"
                    android:background="@color/line_color" />

                <include
                    android:id="@+id/watch_tools_find_watch"
                    layout="@layout/layout_watch_tools_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/button_left_margin"
                    android:background="@color/line_color" />

                <include
                    android:id="@+id/watch_tools_family"
                    layout="@layout/layout_watch_tools_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/button_left_margin"
                    android:background="@color/line_color" />

                <include
                    android:id="@+id/watch_tools_sos"
                    layout="@layout/layout_watch_tools_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/button_left_margin"
                    android:background="@color/line_color" />

                <include
                    android:id="@+id/watch_tools_insurance"
                    layout="@layout/layout_watch_tools_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/button_left_margin"
                    android:background="@color/line_color" />

                <include
                    android:id="@+id/watch_tools_find_location"
                    layout="@layout/layout_watch_tools_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/button_left_margin"
                    android:background="@color/line_color" />

                <include
                    android:id="@+id/watch_tools_not_disturb"
                    layout="@layout/layout_watch_tools_item" />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/button_left_margin"
                    android:background="@color/line_color" />

                <include
                    android:id="@+id/watch_tools_pedometer"
                    layout="@layout/layout_watch_tools_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/button_left_margin"
                    android:background="@color/line_color" />

                <include
                    android:id="@+id/watch_tools_remote_shutdown"
                    layout="@layout/layout_watch_tools_item" />

            </LinearLayout>

            <Button
                android:id="@+id/watch_tools_btn_remove_bind"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginLeft="@dimen/button_left_margin"
                android:layout_marginRight="@dimen/button_right_margin"
                android:layout_marginTop="@dimen/bind_top_margin"
                android:background="@drawable/button_white_selector"
                android:text="@string/dear_button_release_bound"
                android:textColor="@color/app_red"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten_margin"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
