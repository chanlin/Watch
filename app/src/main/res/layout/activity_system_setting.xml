<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/system_setting_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/system_setting_item_height"
            android:background="@drawable/item_selector"
            android:gravity="center">

            <TextView
                style="@style/black_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/system_setting_item_text_size"
                android:text="@string/system_setting_feedback" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/button_left_margin"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/system_setting_question"
            android:layout_width="match_parent"
            android:layout_height="@dimen/system_setting_item_height"
            android:background="@drawable/item_selector"
            android:gravity="center">

            <TextView
                style="@style/black_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/system_setting_item_text_size"
                android:text="@string/system_setting_question" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/button_left_margin"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/system_setting_app_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/system_setting_item_height"
            android:background="@drawable/item_selector"
            android:gravity="center">

            <TextView
                style="@style/black_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/system_setting_item_text_size"
                android:text="@string/system_setting_app_update" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/button_left_margin"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/system_setting_app_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/system_setting_item_height"
            android:background="@drawable/item_selector"
            android:gravity="center">

            <TextView
                style="@style/black_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/system_setting_item_text_size"
                android:text="@string/system_setting_app_about" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/system_setting_button_logoff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/ten_margin"
        android:background="@drawable/button_white_selector"
        android:text="@string/system_setting_button_logoff"
        android:textColor="#ff7271"
        android:textSize="@dimen/button_middle_text_size" />

</LinearLayout>
