<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dialog_min_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_button_white_normal"
        android:minWidth="250.0dip"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:gravity="center"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/dialog_title_text_size" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6600001dip"
            android:background="@color/line_color" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dbdbdb" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#00000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dbdbdb" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp">

                <com.jajale.watch.cviews.AlarmPickerView
                    android:id="@+id/number_picker_year"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffa000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/year"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv2"
                    android:layout_marginLeft="30dp"
                    android:textColor="#ffa000"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp">

                <com.jajale.watch.cviews.AlarmPickerView
                    android:id="@+id/number_picker_month"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffa000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/month"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ffa000"/>

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp">

                <com.jajale.watch.cviews.AlarmPickerView
                    android:id="@+id/number_picker_day"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffa000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/days"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv3"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ffa000"/>

            </RelativeLayout>





        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_left_selector"
                android:gravity="center"
                android:text="@string/quite"
                android:textColor="@color/app_color"
                android:textSize="@dimen/dialog_button_text_size" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_right_selector"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/app_color"
                android:textSize="@dimen/dialog_button_text_size" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
