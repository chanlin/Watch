<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_height_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="15dp"
        android:text="身高:"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/ll_height"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_height_label"
        android:layout_toRightOf="@+id/tv_height_label"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_height_label"
            android:layout_toRightOf="@+id/tv_height_label"
            android:text="100"
            android:textColor="#ffa000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_height_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_height_label"
            android:layout_toRightOf="@+id/tv_height"
            android:text="cm"
            android:textSize="16sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_height_label"
        android:layout_toRightOf="@+id/ll_height"
        android:textColor="#bdbdbd"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_height_label"
        android:layout_toRightOf="@+id/tv_date_label"
        android:text="2015年12月25日"
        android:textColor="#bdbdbd"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_height_label"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="15dp"
        android:text="体重:"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/ll_weight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_weight_label"
        android:layout_toRightOf="@+id/tv_weight_label"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_weight_label"
            android:layout_toRightOf="@+id/tv_weight_label"
            android:text="50"
            android:textColor="#ffa000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_weight_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_weight_label"
            android:layout_toRightOf="@+id/tv_weight"
            android:text="kg"
            android:textSize="16sp" />
    </LinearLayout>


    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_disc"
        android:textColor="@color/app_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_weight_label"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/ll_weight"
        android:drawableLeft="@mipmap/icon_grow_record_desc"
        android:drawablePadding="5dp"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_weight"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="28dp"
            android:background="@color/line_color" />
    </LinearLayout>


</RelativeLayout>
