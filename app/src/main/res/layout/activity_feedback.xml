<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <EditText
                android:id="@+id/feedback_edit_text"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="@dimen/ten_margin"
                android:background="@drawable/my_round_text_gray"
                android:gravity="top"
                android:hint="@string/feedback_edit_text_hint"
                android:padding="10dp"
                android:maxLength="2000"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/info_right_text_size" />


            <Button
                android:id="@+id/feedback_button"
                style="@style/my_common_on_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/str_send" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
