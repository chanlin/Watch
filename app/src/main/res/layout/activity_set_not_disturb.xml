<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/set_not_disturb_rl_start_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_item_height"
            android:background="@drawable/item_selector">

            <TextView
                style="@style/info_textview_left"
                android:text="@string/not_disturb_start_time" />

            <TextView
                android:id="@+id/set_not_disturb_tv_start_time"
                style="@style/gray_textview"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/iv1"
                android:text="" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/button_right_margin"
                android:src="@mipmap/tonext_img" />
        </RelativeLayout>

        <View style="@style/info_line_toleft" />

        <RelativeLayout
            android:id="@+id/set_not_disturb_rl_end_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_item_height"
            android:background="@drawable/item_selector">

            <TextView
                style="@style/info_textview_left"
                android:text="@string/not_disturb_end_time" />

            <TextView
                android:id="@+id/set_not_disturb_tv_end_time"
                style="@style/gray_textview"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/iv2"
                android:text="" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/button_right_margin"
                android:src="@mipmap/tonext_img" />
        </RelativeLayout>




    </LinearLayout>

</LinearLayout>
