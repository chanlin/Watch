<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/info_item_height"
    android:background="@drawable/item_selector"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_two_choosen_title"
        style="@style/info_textview_left"
        android:text="您与宝贝的关系" />

    <RadioGroup
        android:id="@+id/radioGroup_meitianjiancha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="160dp"

        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_two_choosen_left"
            style="@style/my_common_raidobutton"
            android:checked="true"
            android:drawablePadding="5dp"
            android:text="男" />

        <RadioButton
            android:id="@+id/rb_two_choosen_right"
            style="@style/my_common_raidobutton"
            android:layout_marginLeft="20dp"
            android:drawablePadding="5dp"
            android:text="女" />
    </RadioGroup>
</RelativeLayout>
