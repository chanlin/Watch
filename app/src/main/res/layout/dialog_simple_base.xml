<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

   <!-- android:background="@drawable/shape_button_white_normal"-->

    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/layout"
        android:layout_width="@dimen/dialog_min_width"
        android:layout_height="@dimen/dialog_min_height"
        android:layout_gravity="center"
        android:background="@mipmap/dialog_simple_green_bg"
        android:minWidth="@dimen/dialog_min_width"
        android:orientation="vertical">

        <TextView
            android:id="@id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/dialog_green_title_color"
            android:textSize="@dimen/dialog_title_text_size" />

        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="@dimen/divider_margin"
            android:layout_marginRight="@dimen/divider_margin"
            android:layout_height="0.6600001dip"
            android:background="@mipmap/dashes_divider" />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30.0dip"
            android:layout_marginLeft="14.0dip"
            android:layout_marginRight="14.0dip"
            android:layout_marginTop="25.0dip"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_body_up"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dialog_content_color"
                android:textSize="@dimen/dialog_content_text_size" />

            <TextView
                android:id="@+id/dialog_body_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_text_color"
                android:textSize="@dimen/dialog_content2_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dialog_button_margin_top"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height_dialog"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/button_height_dialog"
                android:layout_weight="1.0"
                android:layout_marginLeft="21dp"
                android:background="@mipmap/dialog_button_double"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_button_text_size" />

            <Button
                android:id="@id/btn_ok"
                android:layout_width="0.0dip"
                android:layout_marginLeft="11dp"
                android:layout_height="@dimen/button_height_dialog"
                android:layout_weight="1.0"
                android:background="@mipmap/dialog_button_double"
                android:gravity="center"
                android:text=""
                android:layout_marginRight="21dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_button_text_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
