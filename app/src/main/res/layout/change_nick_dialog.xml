<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/layout"
        android:layout_width="@dimen/dialog_min_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_button_white_normal"
        android:minWidth="@dimen/dialog_min_width"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:gravity="center"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/dialog_title_text_size" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.6600001dip"
            android:background="@android:color/transparent" />
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_input_dialog_content"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dialog_edit_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ten_margin"
                android:background="@drawable/shape_dialog_edittext_bg"
                android:layout_marginLeft="@dimen/ten_margin"
                android:layout_marginRight="@dimen/ten_margin"
                android:textColor="@color/black_text_color"
                android:maxLength="5"
                android:textSize="@dimen/dialog_content_text_size" />

            <TextView
                android:id="@+id/dialog_body_bottom"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/gray_text_color"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/dialog_content_warn_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_left_selector"
                android:gravity="center"
                android:text="@string/quite"
                android:textColor="@color/app_color"
                android:textSize="@dimen/dialog_button_text_size" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_right_selector"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/app_color"
                android:textSize="@dimen/dialog_button_text_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
