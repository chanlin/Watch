<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/app_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/button_left_margin"
            android:text="@string/sos_setting_hint_top" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/black_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/button_left_margin"
                android:text="@string/sos_1" />


            <EditText
                android:id="@+id/sos_setting_et_number_1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:textColor="@color/app_color"
                android:gravity="center_vertical"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <View style="@style/info_line_toleft" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/black_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/button_left_margin"
                android:text="@string/sos_2" />


            <EditText
                android:id="@+id/sos_setting_et_number_2"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/app_color"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <View style="@style/info_line_toleft" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/black_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/button_left_margin"
                android:text="@string/sos_3" />


            <EditText
                android:id="@+id/sos_setting_et_number_3"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/app_color"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <View style="@style/info_line_toleft" />
    </LinearLayout>


</LinearLayout>
