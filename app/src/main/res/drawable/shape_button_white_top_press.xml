<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="@dimen/shape_radius"  android:topRightRadius="@dimen/shape_radius" />
            <stroke android:width="1dp" android:color="@color/line_color" />
        </shape>
    </item>
    <item android:bottom="0.5dp"  >
        <shape>
            <solid android:color="@color/color_press" />
            <corners android:topLeftRadius="@dimen/shape_radius"  android:topRightRadius="@dimen/shape_radius"  />
            <stroke android:width="1dp" android:color="@color/color_press" />
        </shape>
    </item>
</layer-list>